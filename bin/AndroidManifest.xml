        <activity
            android:name="com.scx.movemove.activities.LoginActivity"
            android:label="@string/app_name" >           
        </activity>
         <activity
            android:name="com.scx.movemove.activities.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.scx.movemove.activities.TrainingModeActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.scx.movemove.activities.TrackingModeActivity" 
            android:label="@string/app_name" 

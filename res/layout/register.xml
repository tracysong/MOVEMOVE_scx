<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent" >  
      
  
    <TextView  
        android:id="@+id/txt1"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_margin="30dp"  
        android:gravity="center_horizontal"  
        android:text="Create a new user"   
        android:textSize="28dp" />  
  
    <TextView  
        android:id="@+id/txtname1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/txt1"  
        android:layout_marginBottom="30dp"  
        android:layout_marginRight="5dp"  
        android:text="Name:"  
        android:textSize="20dp" />  
  
    <EditText  
        android:id="@+id/edname1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content" 
         
        android:layout_alignParentRight="true"  
        android:layout_below="@id/txt1"  
         android:layout_toRightOf="@id/txtname1"  
        android:layout_marginBottom="30dp" />  
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/edname1"  
        android:layout_marginTop="10dp"  
        android:gravity="center_horizontal"  
        >  
    
 <TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Your genderï¼š"
    android:textSize="9pt"
    />

 <RadioGroup
     android:id="@+id/radioGroup"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:contentDescription="Gender" >

     <RadioButton
         android:id="@+id/radioMale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:checked="true"
         android:text="Male" />

     <RadioButton
         android:id="@+id/radioFemale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Female" />
 </RadioGroup>

</LinearLayout>

  <TextView
      android:id="@+id/txtHeight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
          android:layout_below="@id/edname1"  
        android:layout_marginTop="110dp" 
     android:layout_marginBottom="30dp"
      android:layout_marginRight="5dp"
      android:text="Height:"
      android:textSize="20dp" />

    <EditText
        android:id="@+id/edWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtWeight"
        android:layout_alignBottom="@+id/txtWeight"
        android:layout_alignLeft="@+id/edHeight"
        android:layout_alignParentRight="true"
        android:hint="Please Enter Your Weight Here (kg) "
        android:textSize="12dp"
        android:ems="10" />

    <EditText
        android:id="@+id/edHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtHeight"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtWeight"
        android:hint="Please Enter Your Height Here (cm) "
        android:textSize="12dp"
        android:ems="10" />

    <TextView
        android:id="@+id/txtWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtHeight"
        android:text="Weight:"
        android:textSize="20dp" 
        />
    <TextView
        android:id="@+id/txtAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtWeight"
        android:text="Age:"
          android:layout_marginTop="20dp" 
        android:textSize="20dp" 
        android:ems="10"/>

     <EditText
         android:id="@+id/edAge"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/edWeight"
         android:layout_toRightOf="@+id/txtHeight"
           android:layout_marginTop="20dp" 
         android:ems="10"
         android:hint="Please Enter Your Age Here"
         android:textSize="12dp" />

   <Button
     android:id="@+id/btregister1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/txtAge"
     android:layout_marginTop="30dp"
     android:text="Enter" />
</RelativeLayout>  
